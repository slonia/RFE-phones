@model IEnumerable<CallManagement.Models.Division>

@{
    ViewBag.Title = "Index";
}

<h2>Подразделения</h2>

<p>
    @Html.ActionLink("Добавить", "Create", null, new { @class="btn btn-primary"})
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ParentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Действия
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Parent.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <div class="btn-group-vertical">
            @Html.ActionLink("Редактировать", "Edit", new { id = item.DivisionId }, new { @class="btn btn-default" }) 
            @Html.ActionLink("Просмотреть", "Details", new { id = item.DivisionId }, new { @class="btn btn-default"}) 
            @Html.ActionLink("Удалить", "Delete", new { id=item.DivisionId }, new { @class="btn btn-danger" })
            </div>
        </td>
    </tr>
}

</table>
