@model IEnumerable<CallManagement.Models.Phone>

@{
    ViewBag.Title = "Index";
}

<h2>Телефоны</h2>

<p>
    @Html.ActionLink("Добавить", "Create", null, new { @class="btn btn-primary"})
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Division.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarif.Operator)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            Действия
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Division.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarif.Operator)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            <div class="btn-group-vertical">
                @Html.ActionLink("Редактировать", "Edit", new { id = item.PhoneId }, new { @class="btn btn-default"}) 
                @Html.ActionLink("Просмотреть", "Details", new { id=item.PhoneId }, new { @class="btn btn-default"}) 
                @Html.ActionLink("Удалить", "Delete", new { id=item.PhoneId }, new { @class="btn btn-danger"})
                @Html.ActionLink("Статистика звонков", "GetStatistics", new { id=item.PhoneId }, new { @class="btn btn-success"})

            </div>
        </td>
    </tr>
}

</table>
